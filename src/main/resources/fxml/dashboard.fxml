<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DashboardController"
            prefWidth="900" prefHeight="600">

    <!-- TÍTULO SUPERIOR -->
    <top>
        <Label fx:id="lblMensaje"
               text="Panel de Control - Gimnasio"
               style="-fx-font-size: 24px; -fx-padding: 15; -fx-font-weight: bold;" />
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TARJETAS DE ESTADÍSTICAS -->
            <HBox spacing="15">
                <AnchorPane fx:id="cardClientes" prefWidth="200" prefHeight="120" />
                <AnchorPane fx:id="cardPagos" prefWidth="200" prefHeight="120" />
                <AnchorPane fx:id="cardVencimientos" prefWidth="200" prefHeight="120" />
                <AnchorPane fx:id="cardIngresos" prefWidth="200" prefHeight="120">
                    <VBox alignment="CENTER" spacing="5"
                          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                        <Label text="Ingresos Mensuales"
                               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <VBox fx:id="miniGrafico" prefHeight="70" prefWidth="180" />
                    </VBox>
                </AnchorPane>
            </HBox>

            <!-- LISTA DE CLIENTES PRÓXIMOS A VENCER -->
            <Label text="Clientes Próximos a Vencer"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="listaClientesProximosAVencer"
                      prefHeight="200" />

            <!-- BOTONES DE ACCIÓN -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Region fx:id="regionSpacer" HBox.hgrow="ALWAYS"/>

                <Button text="Registrar Cliente"
                        onAction="#handleRegistroCliente"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />

                <Button text="Exportar PDF"
                        onAction="#handleExportarPDF"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>